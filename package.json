{
  "name": "simplemq",
  "version": "0.0.1",
  "description": "A simple message queue server that requires only nodejs",
  "main": "src/server.js",
  "scripts": {
    "wait:jest": "wait-on tcp:38000 && npm run jest",
    "jest": "jest --forceExit --detectOpenHandles --runInBand",
    "server:start": "NODE_ENV=test node src/utils/test-server.js",
    "wait:test": "npm run server:start & npm run wait:jest",
    "test": "npm run jest",
    "eslint-init": "eslint --init"
  },
  "keywords": [
    "gRPC",
    "message",
    "queue"
  ],
  "author": "Martin Ahindura",
  "license": "MIT",
  "dependencies": {
    "@grpc/proto-loader": "^0.5.6",
    "ajv": "^7.1.1",
    "grpc": "^1.24.5",
    "lokijs": "^1.5.11"
  },
  "devDependencies": {
    "@types/jest": "^26.0.20",
    "eslint": "^7.21.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.1.5",
    "jest": "26.6.3",
    "prettier": "2.2.1",
    "wait-on": "^5.2.1"
  }
}
